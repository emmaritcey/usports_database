{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Current File",
            "type": "debugpy",  // Use debugpy instead of python
            "request": "launch",
            "program": "${file}",
            "env": {
                "PYDEVD_WARN_EVALUATION_TIMEOUT": "10"  // Set the timeout for evaluations
            },
            "console": "integratedTerminal"
        }
    ]
}